<%= simple_form_for @workfile, remote: true do |f| %>
  <% if @workfile.errors.any? %>
    <errors>
      <p>
        <%= @workfile.errors.count %>
        Preveted this workfile from saving
      </p>
      <ul>
        <% @workfile.errors.full.messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </errors>
  <% end %>
  <div class="panel-body">
    <%= f.input :title, input_html: { class: 'form-control' } %>
    <%= f.input :date, :as => :date_picker %>
    <%= f.input :description, input_html: { class: 'form-control' } %>
    <div class="row">
      <div class="col-md-12">
        <%= link_to 'Back', root_path, class: "btn btn-default" %>
        <%= f.button :submit, class: "btn btn-primary" %>
      </div>
    </div>
  </div>

<% end %>
